<% if(title) { %>
  <h1>
    <%= title %>
  </h1>
  <%} else { res.redirect('/'); } %>

    <%- messages() %>
    <% if (errors) { %>
       <ul class="notice">
      <% errors.array().forEach(error=> { %>
        <li>
          <%= error.msg %>
        </li>
      <% }) %>
      </ul>
    <% } %>

<form id="loginForm" action="/account/login" method="post">
  <fieldset id="login">
    <label for="accountEmail">Email:</label><br>
    <input type="email" id="loginEmail" name="account_email"
           required value="<%= locals.account_email %>"><br>
    <label for="login_pwd">Password:</label><br>
    <input type="password" id="login_pwd" name="account_password"
           required><br>
    <input type="submit" id="login_btn" value="Login"><br>
    <span>No account?<a href="/account/registration"> Sign-up</a></span>
  </fieldset>
</form>

