<% if(title) { %>
  <h1 id="manageInventoryHead">
    <%= title %>
  </h1>
  <%} else { res.redirect('/'); } %>

  <%- messages() %>
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error=> { %>
        <li>
           <%= error.msg %>
        </li>
      <% }) %>
    </ul>
  <% } %>

<div>
  <p>
    <strong>*** The delete is permanent  - Confirm Deletion *** </strong>
  </p>
</div>
<form id="deleteForm" action="/inv/remove/" method="post">
  <fieldset id="enterInventory">

    <label for="invMake">Make</label><br>
    <input type="text" id="invMake" name="inv_make" 
           required value="<%= locals.inv_make %>" readonly>
    <br>
    <label for="inv_model">Model</label><br>
    <input type="text" id="inv_model" name="inv_model" 
               required value="<%= locals.inv_model %>" readonly>
    <br>
    <label for="invYear">Year</label><br>
    <input type="text" id="invYear" name="inv_year" 
           required value="<%= locals.inv_year %>" readonly>
    <br>
    <label for="invPrice">Price</label><br>
    <input type="text" id="invPrice" name="inv_price" 
           required value=" <%= locals.inv_price %>" readonly>
    <br>
    <input type="submit" id="add-invBtn" value="Delete" >
    <input type="hidden" name="inv_id" 
      <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %> >
    <br>

  </fieldset>
</form>